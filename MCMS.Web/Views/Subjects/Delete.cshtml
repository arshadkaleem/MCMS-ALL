@model MCMS.Infrastructure.Models.Subject

@{
    ViewData["Title"] = "Delete Subject";
}

<h1>Delete Subject</h1>

<div class="alert alert-danger">
    <h3>Are you sure you want to delete this subject?</h3>
    <p>This will mark the record as deleted but it can be restored later.</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-3">Subject Name</dt>
        <dd class="col-sm-9">@Model.SubjectName</dd>

        <dt class="col-sm-3">Course</dt>
        <dd class="col-sm-9">@(Model.Course?.CourseName ?? "N/A")</dd>

        <dt class="col-sm-3">Department</dt>
        <dd class="col-sm-9">@(Model.Department?.DepartmentName ?? "N/A")</dd>

        <dt class="col-sm-3">Credits</dt>
        <dd class="col-sm-9">@Model.Credits</dd>

        <dt class="col-sm-3">Semester</dt>
        <dd class="col-sm-9">@Model.Semester</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SubjectId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>