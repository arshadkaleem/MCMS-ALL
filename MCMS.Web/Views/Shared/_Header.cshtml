<div class="container-fluid d-flex align-items-center justify-content-between" id="kt_header_container">
    <!-- Page title -->
    <div class="page-title d-flex flex-column align-items-start justify-content-center flex-wrap me-lg-2 pb-5 pb-lg-0" data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', lg: '#kt_header_container'}">
        <h1 class="d-flex flex-column text-dark fw-bolder my-0 fs-1">@ViewData["Title"]</h1>
    </div>
    <!-- Toolbar -->
    <div class="d-flex align-items-center py-1">
        <!-- User profile dropdown -->
        <div class="d-flex align-items-center ms-1" id="kt_header_user_menu_toggle">
            <div class="cursor-pointer symbol symbol-35px" data-kt-menu-trigger="click" data-kt-menu-attach="parent" data-kt-menu-placement="bottom-end" data-kt-menu-flip="bottom">
                <img src="~/images/avatar.jpg" alt="user" />
            </div>
            <!-- User menu dropdown -->
            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-primary fw-bold py-4 fs-6 w-275px" data-kt-menu="true">
                <div class="menu-item px-3">
                    <div class="menu-content d-flex align-items-center px-3">
                        <div class="symbol symbol-50px me-5">
                            <img alt="Logo" src="~/images/avatar.jpg" />
                        </div>
                        <div class="d-flex flex-column">
                            <div class="fw-bolder d-flex align-items-center fs-5">Admin</div>
                            <a href="#" class="fw-bold text-muted text-hover-primary fs-7">admin@example.com</a>
                        </div>
                    </div>
                </div>
                <div class="separator my-2"></div>
                <div class="menu-item px-5">
                    <a href="#" class="menu-link px-5">Sign Out</a>
                </div>
            </div>
        </div>
    </div>
</div>