<!-- MCMS.Web/Views/Shared/_Layout.cshtml -->
<!DOCTYPE html>
<html lang="en" class="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MCMS</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" />
    <script src="~/js/site.js" defer></script>
</head>
<body class="bg-gray-100 font-sans text-gray-700">
    <div class="demo1 flex min-h-screen">
        <!-- Sidebar -->
        <div id="sidebar" class="fixed z-50 flex h-screen w-[280px] flex-col bg-white shadow-sm transition-all duration-300 ease-in-out dark:bg-coal-100">
            <div class="flex h-[70px] items-center justify-between border-b border-gray-200 px-7 dark:border-coal-300">
                <a href="/" class="flex items-center">
                    <span class="text-xl font-semibold text-gray-900 dark:text-white">MCMS</span>
                </a>
                <button id="sidebar-toggle-mobile" class="lg:hidden">
                    <svg class="h-6 w-6 text-gray-600 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <div class="scrollable overflow-y-auto">
                <div class="menu px-4 py-5">
                    <!-- Main Menu -->
                    <div class="menu-item mb-1">
                        <a href="/" class="menu-link active">
                            <span class="menu-icon">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                                </svg>
                            </span>
                            <span class="menu-title">Dashboard</span>
                        </a>
                    </div>

                    <!-- Department Management -->
                    <div class="menu-item mb-1">
                        <a href="#" class="menu-link">
                            <span class="menu-icon">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                </svg>
                            </span>
                            <span class="menu-title">Departments</span>
                        </a>
                    </div>

                    <!-- Faculty Management -->
                    <div class="menu-item mb-1">
                        <a href="#" class="menu-link">
                            <span class="menu-icon">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                                </svg>
                            </span>
                            <span class="menu-title">Faculty</span>
                        </a>
                    </div>

                    <!-- Courses Management -->
                    <div class="menu-item mb-1">
                        <a href="#" class="menu-link">
                            <span class="menu-icon">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                </svg>
                            </span>
                            <span class="menu-title">Courses</span>
                        </a>
                    </div>

                    <!-- Subjects Management -->
                    <div class="menu-item mb-1">
                        <a href="#" class="menu-link">
                            <span class="menu-icon">
                                <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                            </span>
                            <span class="menu-title">Subjects</span>
                        </a>
                    </div>

                    <!-- Add more menu items based on your system requirements -->
                </div>
            </div>
        </div>

        <!-- Main content wrapper -->
        <div class="flex-1 transition-all duration-300 ease-in-out lg:pl-[280px]">
            <!-- Header -->
            <header class="fixed top-0 z-30 flex h-[70px] w-full items-center justify-between border-b border-gray-200 bg-white px-6 dark:border-coal-300 dark:bg-coal-100 lg:left-[280px] lg:w-[calc(100%-280px)]">
                <div class="flex items-center">
                    <button id="sidebar-toggle" class="mr-4 hidden lg:block">
                        <svg class="h-6 w-6 text-gray-600 dark:text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                    <div class="text-lg font-medium text-gray-800 dark:text-white">@ViewData["Title"]</div>
                </div>

                <div class="flex items-center space-x-4">
                    <!-- User menu -->
                    <div class="relative">
                        <button id="user-menu-button" class="flex items-center space-x-2">
                            <div class="h-10 w-10 rounded-full bg-primary text-center text-lg font-semibold leading-10 text-white">
                                A
                            </div>
                            <span class="hidden text-sm font-medium text-gray-700 dark:text-gray-300 lg:block">Admin</span>
                        </button>
                        <!-- User dropdown menu (hidden by default) -->
                    </div>
                </div>
            </header>

            <!-- Main content area -->
            <main class="pt-[70px]">
                <div class="container mx-auto p-6">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Basic sidebar toggle functionality
        document.getElementById('sidebar-toggle').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            const mainContent = document.querySelector('.flex-1');

            sidebar.classList.toggle('w-[280px]');
            sidebar.classList.toggle('w-[80px]');

            mainContent.classList.toggle('lg:pl-[280px]');
            mainContent.classList.toggle('lg:pl-[80px]');

            document.querySelectorAll('.menu-title, .menu-arrow').forEach(el => {
                el.classList.toggle('hidden');
            });
        });

        // Mobile sidebar toggle
        document.getElementById('sidebar-toggle-mobile').addEventListener('click', function() {
            const sidebar = document.getElementById('sidebar');
            sidebar.classList.toggle('-translate-x-full');
        });
    </script>
</body>
</html>


