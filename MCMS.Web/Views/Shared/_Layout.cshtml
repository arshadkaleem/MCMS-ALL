<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Moksha College CMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MCMS.Web.styles.css" asp-append-version="true" />
</head>
<body class="bg-light">
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container-fluid px-4">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="fs-4 fw-bold text-primary">MCMS</span>
                    <span class="ms-2 text-muted fs-6">| Admin Portal</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link px-3" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-3" href="#" id="academicDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-graduation-cap me-1"></i> Academic
                            </a>
                            <ul class="dropdown-menu shadow-sm" aria-labelledby="academicDropdown">
                                <li><a class="dropdown-item" asp-controller="Departments" asp-action="Index">Departments</a></li>
                                <li><a class="dropdown-item" asp-controller="Courses" asp-action="Index">Courses</a></li>
                                <li><a class="dropdown-item" asp-controller="Subjects" asp-action="Index">Subjects</a></li>
                                <li><a class="dropdown-item" asp-controller="Faculty" asp-action="Index">Faculty</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle px-3" href="#" id="contentDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-file-alt me-1"></i> Content
                            </a>
                            <ul class="dropdown-menu shadow-sm" aria-labelledby="contentDropdown">
                                <li><a class="dropdown-item" asp-controller="Categories" asp-action="Index">Categories</a></li>
                                <li><a class="dropdown-item" asp-controller="StaticPages" asp-action="Index">Pages</a></li>
                                <li><a class="dropdown-item" asp-controller="Navigation" asp-action="Index">Menus</a></li>
                            </ul>
                        </li>
                    </ul>

                    <div class="d-flex align-items-center">
                        <div class="dropdown">
                            <a href="#" class="d-flex align-items-center text-decoration-none dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <img src="~/images/avatar.jpg" alt="User" width="32" height="32" class="rounded-circle me-2" />
                                <span class="d-none d-sm-inline">Admin</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-sign-out-alt me-2"></i>Sign Out</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4 py-4">
        <div class="row mb-4">
            <div class="col-12">
                <h1 class="fs-3 fw-bold mb-0">@ViewData["Title"]</h1>
                @if (ViewData["Subtitle"] != null)
                {
                    <p class="text-muted mb-0">@ViewData["Subtitle"]</p>
                }
            </div>
        </div>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="mt-auto py-4 bg-white border-top">
        <div class="container-fluid px-4">
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-center">
                <div class="text-muted">
                    &copy; 2025 - Moksha College Management System
                </div>
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-decoration-none text-muted">Privacy</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

