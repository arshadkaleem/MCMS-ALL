@* MCMS.Web/Views/Departments/AssignHOD.cshtml *@
@model MCMS.Web.Models.AssignHODViewModel

@{
    ViewData["Title"] = "Assign Head of Department";
}

<h1>Assign Head of Department</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="AssignHOD">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentId" />

            <div class="form-group mb-3">
                <label class="control-label">Department</label>
                <input class="form-control" value="@Model.DepartmentName" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="SelectedFacultyId" class="control-label"></label>
                <select asp-for="SelectedFacultyId" asp-items="Model.FacultyList" class="form-control">
                    <option value="">-- Select Faculty Member --</option>
                </select>
                <span asp-validation-for="SelectedFacultyId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Assign" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}